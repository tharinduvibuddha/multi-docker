{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "tharindu1996/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "tharindu1996/multi-server",
            "hostname": "api",
            "essential": false
        },

        {
            "name": "worker",
            "image": "tharindu1996/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "tharindu1996/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                   "hostPort": 80,
                   "containerPort":80 
                }
            ],
            "links":["client", "server"]
        }
    ]

}